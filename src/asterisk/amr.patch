+			for (val = 0; val < size; val = val + 1) {
+				if (0 <= v[val] && v[val] < size) {
+					attr->mode_set = (attr->mode_set | (1 << v[val]));
+					attr->mode_current = v[val];
+				}
+			}
+		}
+	}
+
+	attr->mode_change_capability = 0;
+	tmp = strstr(attributes, "mode-change-capability=");
