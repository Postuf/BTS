+	attr->octet_align = 0;
+	tmp = strstr(attributes, "octet-align=");
+	if (tmp) {
+		if (sscanf(tmp, "octet-align=%30u", &val) == 1) {
+			attr->octet_align = val;
+		}
+	}
+
+	attr->mode_set = 0;
+	tmp = strstr(attributes, "mode-set=");
+	if (tmp) {
+		if (sscanf(tmp, "mode-set=%30u,%30u,%30u,%30u,%30u,%30u,%30u,%30u,%30u",
